        public string ToJson()
        {
            var builder = new StringBuilder();
            var stringWriter = new StringWriter(builder);

            using (var writer = new JsonTextWriter(stringWriter))
            {
                IncludeJson(writer);

                return builder.ToString();
            }
        }

